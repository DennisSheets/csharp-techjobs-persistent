@using TechJobsPersistent.ViewModels
@model AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home">
    
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input  asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Employer:   </label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <a asp-controller="Employer" asp-action="Add">Add new Employer</a>
    </div>
    
    <div class="form-group">
        <label>Required Skills for this job: </label><a asp-controller="Skill" asp-action="Add">   Add new Skills</a><br/>
        @foreach(var skill in @Model.Skills)
        {
            <label>
                <input type="checkbox" name="selectedSkills" value="@skill.Id"/>  @skill.Name
            </label><br>
        }
    </div>
    

    <input type="submit" value="Add Job" />
</form>

